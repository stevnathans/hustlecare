generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // directUrl = env("DIRECT_URL") // For migrations
}

model User {
  id                  String      @id @default(uuid())
  name                String
  email               String      @unique
  phone               String?
  password            String?
  emailVerified       DateTime?
  image               String?
  role                String      @default("user") // user, author, editor, reviewer, admin
  
  // Notification preferences
  emailNotifications  Boolean     @default(true)
  pushNotifications   Boolean     @default(false)
  marketingEmails     Boolean     @default(true)
  
  // Admin tracking
  lastLoginAt         DateTime?
  isActive            Boolean     @default(true)
  
  // Community features
  isVerified          Boolean     @default(false)
  verifiedAt          DateTime?
  
  carts               Cart[]
  businesses          Business[]
  comments            Comment[]
  reviews             Review[]
  accounts            Account[]
  sessions            Session[]
  searches            SearchLog[]
  auditLogs           AuditLog[]
  
  // Community sharing relations
  sharedBusinesses    SharedBusiness[]
  copiedBusinesses    BusinessCopyActivity[]
  
  createdAt           DateTime    @default(now())
  updatedAt           DateTime    @updatedAt
  
  @@index([email])
  @@index([role])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Cart {
  id         String     @id @default(uuid())
  name       String?
  userId     String
  businessId Int
  user       User       @relation(fields: [userId], references: [id])
  business   Business   @relation(fields: [businessId], references: [id])
  items      CartItem[]
  totalCost  Float?
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt

  @@unique([userId, businessId])
  @@index([userId])
  @@index([businessId])
}

model CartItem {
  id              String   @id @default(uuid())
  cartId          String
  productId       Int
  quantity        Int      @default(1)
  unitPrice       Float
  category        String?  @default("Uncategorized")
  requirementName String?  @default("Unspecified Requirement")
  cart            Cart     @relation(fields: [cartId], references: [id], onDelete: Cascade)
  product         Product  @relation(fields: [productId], references: [id])
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@unique([cartId, productId])
  @@index([cartId])
}

model Business {
  id           Int                @id @default(autoincrement())
  slug         String             @unique
  name         String
  description  String?
  image        String?
  published    Boolean            @default(true)
  categoryId   Int?
  category     BusinessCategory?  @relation(fields: [categoryId], references: [id])
  createdAt    DateTime           @default(now())
  updatedAt    DateTime           @updatedAt
  
  // Requirements now come through the link table
  requirements BusinessRequirement[]
  
  carts        Cart[]
  searches     SearchLog[]
  user         User?              @relation(fields: [userId], references: [id])
  userId       String?
  
  sharedBusinesses SharedBusiness[]

  @@index([name])
  @@index([slug])
  @@index([published])
}

model BusinessCategory {
  id         Int        @id @default(autoincrement())
  name       String     @unique
  slug       String     @unique             
  businesses Business[]
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt

  @@index([name])
  @@index([slug])                        
}

// ============================================
// REQUIREMENT LIBRARY SYSTEM
// ============================================

// RequirementTemplate — the canonical library record.
// Lives independently of any business.
// Descriptions use [businessName] as a token that resolves at display time.
model RequirementTemplate {
  id          Int       @id @default(autoincrement())
  name        String
  // Description uses [businessName] token e.g. "You need a business permit to operate your [businessName]."
  description String?
  image       String?
  category    String    // Equipment, Software, Documents, Legal, Branding, Operating Expenses
  necessity   String    // Required, Optional
  
  // Soft delete — deprecated templates are hidden from new linking but
  // existing BusinessRequirement links continue to work.
  isDeprecated  Boolean   @default(false)
  deprecatedAt  DateTime?

  // Relations
  businesses  BusinessRequirement[]
  products    Product[]             // Products belong to templates, not to link records
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([category])
  @@index([necessity])
  @@index([isDeprecated])
  @@index([name])
}

// BusinessRequirement — the link between a template and a business.
// One template can be linked to many businesses.
// One business + one template = exactly one link (enforced by @@unique).
model BusinessRequirement {
  id          Int      @id @default(autoincrement())
  
  businessId  Int
  templateId  Int
  
  business    Business            @relation(fields: [businessId], references: [id], onDelete: Cascade)
  template    RequirementTemplate @relation(fields: [templateId], references: [id], onDelete: Restrict)

  // Optional override fields — null means "inherit from template"
  // Admins can customize the description for a specific business without
  // touching the library record.
  descriptionOverride String?

  // Behavioural fields
  isActive      Boolean  @default(true)
  displayOrder  Int      @default(0)
  
  // Audit: how was this link created?
  // "auto"  = system created (e.g. CSV import, universal requirement)
  // "admin" = manually linked by admin
  source        String   @default("admin") // auto | admin

  comments      Comment[]

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // One requirement per business — attempting to link again returns 409
  @@unique([businessId, templateId])
  @@index([businessId])
  @@index([templateId])
  @@index([isActive])
}

// Comments now attach to a BusinessRequirement (the link record),
// so they are scoped to a specific business's version of a requirement.
model Comment {
  id                    Int                 @id @default(autoincrement())
  content               String
  businessRequirementId Int
  userId                String
  isApproved            Boolean             @default(false)
  businessRequirement   BusinessRequirement @relation(fields: [businessRequirementId], references: [id], onDelete: Cascade)
  user                  User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt             DateTime            @default(now())
  updatedAt             DateTime            @updatedAt
  
  @@index([businessRequirementId])
  @@index([userId])
  @@index([isApproved])
}

model Product {
  id          Int                  @id @default(autoincrement())
  name        String
  description String?
  price       Float?
  image       String?
  url         String?
  vendorId    Int?
  
  // Products belong to a template (requirement type), not to a link
  templateId  Int?
  
  vendor      Vendor?              @relation(fields: [vendorId], references: [id])
  template    RequirementTemplate? @relation(fields: [templateId], references: [id], onDelete: SetNull)
  cartItems   CartItem[]
  reviews     Review[]
  createdAt   DateTime             @default(now())
  updatedAt   DateTime             @updatedAt
  
  @@index([vendorId])
  @@index([templateId])
  @@index([name])
}

model Review {
  id         String   @id @default(uuid())
  product    Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId  Int
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     String
  rating     Int
  comment    String
  isApproved Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  
  @@index([productId])
  @@index([userId])
  @@index([isApproved])
}

model Vendor {
  id        Int       @id @default(autoincrement())
  name      String
  website   String?
  logo      String?
  products  Product[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@unique([name, website])
  @@index([name])
}

model SearchLog {
  id          String    @id @default(uuid())
  keyword     String
  location    String?
  userId      String?
  businessId  Int?
  ipAddress   String?
  userAgent   String?
  resultCount Int?
  user        User?     @relation(fields: [userId], references: [id])
  business    Business? @relation(fields: [businessId], references: [id])
  createdAt   DateTime  @default(now())

  @@index([keyword])
  @@index([createdAt])
  @@index([userId])
}

model AuditLog {
  id          String   @id @default(uuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  action      String   // CREATE, UPDATE, DELETE, VIEW
  entity      String   // Business, Product, User, RequirementTemplate, BusinessRequirement, etc.
  entityId    String
  changes     Json?
  ipAddress   String?
  userAgent   String?
  createdAt   DateTime @default(now())
  
  @@index([userId])
  @@index([entity])
  @@index([action])
  @@index([createdAt])
}

// ============================================
// COMMUNITY SHARING FEATURE MODELS
// ============================================

model SharedBusiness {
  id          Int      @id @default(autoincrement())
  userId      String
  businessId  Int
  name        String
  description String?  @db.Text
  isActive    Boolean  @default(true)
  viewCount   Int      @default(0)
  copyCount   Int      @default(0)
  isFeatured  Boolean  @default(false)
  featuredAt  DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  business Business @relation(fields: [businessId], references: [id], onDelete: Cascade)
  copies   BusinessCopyActivity[]

  @@unique([userId, businessId])
  @@index([isActive, viewCount])
  @@index([isActive, copyCount])
  @@index([isActive, createdAt])
  @@index([isFeatured])
}

model BusinessCopyActivity {
  id               Int      @id @default(autoincrement())
  sharedBusinessId Int
  copiedByUserId   String
  copiedAt         DateTime @default(now())

  sharedBusiness SharedBusiness @relation(fields: [sharedBusinessId], references: [id], onDelete: Cascade)
  copiedByUser   User           @relation(fields: [copiedByUserId], references: [id], onDelete: Cascade)

  @@index([sharedBusinessId])
  @@index([copiedByUserId])
  @@index([copiedAt])
}
